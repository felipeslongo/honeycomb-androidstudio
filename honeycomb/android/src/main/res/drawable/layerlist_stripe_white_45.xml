<?xml version="1.0" encoding="utf-8"?>
<!--https://stackoverflow.com/questions/15237582/how-rotate-line-in-android-xml-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
                android:fromDegrees="45"
                android:toDegrees="45"
                android:pivotX="50%"
                android:pivotY="50%"
                >
            <shape
                    android:shape="line"
                    android:top="1dp">
                <stroke
                        android:width="1dp"
                        android:color="@android:color/white"
                        />
            </shape>
        </rotate>
    </item>
</layer-list>
