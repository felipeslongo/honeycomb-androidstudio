<resources>

    <!-- Base application theme. -->
    <style name="Theme.Honeycomb" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Action.Badge" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/holo_red_light</item>
        <item name="chipMinHeight">18dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textStartPadding">6dp</item>
        <item name="textEndPadding">6dp</item>

        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Action.Badge.Small" parent="Widget.MaterialComponents.Chip.Action.Badge">
        <item name="chipMinHeight">15dp</item>
        <item name="textStartPadding">5dp</item>
        <item name="textEndPadding">5dp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Chip.Badge" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Chip.Badge.Small" parent="TextAppearance.MaterialComponents.Chip.Badge">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
