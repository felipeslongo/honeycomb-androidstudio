<resources>

    <!-- Base application theme. -->
    <style name="Theme.Honeycomb" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Action.Badge" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/holo_red_light</item>
        <item name="chipMinHeight">20dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Chip.Badge" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
