<?xml version="1.0" encoding="utf-8"?>
<resources>
    /*===================================TextAppearance.*=========================================*/
    <style name="TextAppearance.Mercos.Button" parent="TextAppearance.MaterialComponents.Button"/>
    <style name="TextAppearance.Mercos.Button.Light" parent="TextAppearance.Mercos.Button">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Mercos.Chip.CheckIn" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Mercos.TextView.Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.Mercos.TextView.Value" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Mercos.Toolbar.Title.Dark" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.Mercos.Toolbar.Subtitle.Dark" parent="TextAppearance.MaterialComponents.Body1" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    /*=======================================Widget.*=============================================*/
    <style name="Widget.Mercos.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorPrimaryDark</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>
    <style name="Widget.Mercos.Button.Light" parent="Widget.Mercos.Button">
        <item name="backgroundTint">@color/mercos_cinza_50</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="rippleColor">@color/ripple_material_light</item>
    </style>

    <style name="Widget.Mercos.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?colorPrimaryDark</item>
        <item name="rippleColor">@color/ripple_material_dark</item>
        <item name="tint">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
    </style>


    /*=======================================LEGADO=============================================*/
    <style name="CampoCadastroWrapper">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>
    <style name="CampoLabel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">3dip</item>
    </style>
    <style name="CampoTextAreaExpansivel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|left</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:minLines">4</item>
        <item name="android:textColorHint">#D3D3D3</item>
    </style>
    <style name="CampoPadrao" parent="android:Widget.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>