<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_edicao_resultado_atendimento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme"
        >

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="?attr/colorPrimaryDark"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="Descreva o atendimento"
                app:titleEnabled="true"
                app:expandedTitleMarginStart="12dp"
                app:expandedTitleMarginEnd="12dp"
                app:toolbarId="@id/toolbar"
                >

            <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/toolbar_edicao_resultado_atendimento"
                    app:navigationIcon="@drawable/ic_baseline_close_24"
                    />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:clipToPadding="false"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/margem_grande_extra">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margem_normal"
                    android:text="Deseja cadastrar o resultado desse atendimento?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="?android:textColorPrimary"
                    app:lineHeight="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <include
                    android:id="@+id/cliente"
                    layout="@layout/view_campo_detalhe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margem_grande_extra"
                    android:layout_marginHorizontal="@dimen/margem_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titulo" />

            <LinearLayout
                    android:id="@+id/resultado_atendimento"
                    style="@style/CampoCadastroWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margem_grande_extra"
                    android:layout_marginHorizontal="@dimen/margem_normal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cliente">

                <TextView
                        android:id="@+id/resultado_atendimento_label"
                        style="@style/CampoLabel"
                        android:text="Resultado do atendimento" />

                <AutoCompleteTextView
                        android:id="@+id/resultado_atendimento_valor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/detalhe_atendimento"
                    style="@style/CampoCadastroWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margem_normal"
                    android:layout_marginHorizontal="@dimen/margem_normal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resultado_atendimento">

                <TextView
                        android:id="@+id/detalhe_atendimento_label"
                        style="@style/CampoLabel"
                        android:text="Resultado do atendimento" />

                <EditText style="@style/CampoTextAreaExpansivel"
                        android:id="@+id/detalhe_atendimento_valor"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
