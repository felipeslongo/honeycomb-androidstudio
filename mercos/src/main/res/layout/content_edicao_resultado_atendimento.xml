<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_edicao_resultado_atendimento"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/resultado_atendimento"
            style="@style/CampoCadastroWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/resultado_atendimento_label"
                style="@style/CampoLabel"
                android:text="Resultado do atendimento" />

        <AutoCompleteTextView
                android:id="@+id/resultado_atendimento_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/detalhe_atendimento"
            style="@style/CampoCadastroWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margem_normal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultado_atendimento">

        <TextView
                android:id="@+id/detalhe_atendimento_label"
                style="@style/CampoLabel"
                android:text="Resultado do atendimento" />

        <EditText style="@style/CampoTextAreaExpansivel"
                android:id="@+id/detalhe_atendimento_valor"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>