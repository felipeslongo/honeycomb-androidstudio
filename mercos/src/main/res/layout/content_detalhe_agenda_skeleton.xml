<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/skeleton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:clickable="true"
        >

    <include layout="@layout/skeleton_topappbar"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/skeleton"/>

    <View
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="48dp" />

    <include layout="@layout/view_campo_detalhe_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_normal"
            android:layout_marginTop="32dp" />

    <include layout="@layout/view_campo_detalhe_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_normal"
            android:layout_marginTop="@dimen/margem_pequena"/>

    <include layout="@layout/view_campo_detalhe_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_normal"
            android:layout_marginTop="@dimen/margem_pequena"/>

    <View
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="32dp" />

    <include layout="@layout/view_campo_detalhe_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_normal"
            android:layout_marginTop="32dp"/>

    <include layout="@layout/view_campo_detalhe_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_normal"
            android:layout_marginTop="@dimen/margem_pequena"/>

    <include layout="@layout/view_campo_detalhe_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_normal"
            android:layout_marginTop="@dimen/margem_pequena"/>

    <include layout="@layout/view_campo_detalhe_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_normal"
            android:layout_marginTop="@dimen/margem_pequena"/>

    <include layout="@layout/view_campo_detalhe_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margem_normal"
            android:layout_marginTop="@dimen/margem_pequena"/>

</LinearLayout>